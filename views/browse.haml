%script{:type => "text/javascript",
        :src  => "/js/sorttable.js"}

%table#streams{:class=>"sortable", :border=>"0"}
  %tr
    %th Stream
    %th Created at
    - @streams.each do |stream|
      %tr
        %td 
          %a{:href => "/stream/#{stream.slug}"}
            %h3= stream.name
            %p= stream.description
            %div.hidden.source_uuid= stream.source_uuid
        %td= stream.created_at
        
= javascript_script_tag "/js/browse.js"